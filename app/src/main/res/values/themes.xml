<resources>
    <!-- Base application theme. -->
    <style name="Theme.RollingMoment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/CFFFFFF</item>
        <!--Status Bar 아이콘의 색상 true:검은 아이콘, false:흰 아이콘-->
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="checkboxStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <!-- Font Family -->
    <style name="BoldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

