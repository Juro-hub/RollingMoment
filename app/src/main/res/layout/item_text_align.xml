<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivAlign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_6_fafafa"
        android:padding="12dp"
        android:src="@drawable/ic_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAlign"
        style="@style/L612Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/trace_create_alignment_left"
        android:textColor="@color/C7F7F7F"
        app:layout_constraintEnd_toEndOf="@id/ivAlign"
        app:layout_constraintStart_toStartOf="@id/ivAlign"
        app:layout_constraintTop_toBottomOf="@id/ivAlign" />


</androidx.constraintlayout.widget.ConstraintLayout>