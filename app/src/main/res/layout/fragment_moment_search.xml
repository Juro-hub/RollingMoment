<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/etSearch"
        app:layout_constraintBottom_toBottomOf="@id/etSearch"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_close"
        android:layout_marginStart="18dp"
        android:id="@+id/ivClose"/>

    <kr.co.rolling.moment.ui.component.CommonEditText
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:inputMaxLength="20"
        android:id="@+id/etSearch"
        app:iconDrawable="@drawable/ic_find"
        app:inputImeOptions="actionDone"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        app:hintText="@string/moment_search_hint"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        android:id="@+id/layoutRecentSearch">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/L314Bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/C171719"
            android:text="@string/moment_search_recent_title"
            android:id="@+id/tvRecentTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/L314Bold"
            android:textColor="@color/C7F7F7F"
            android:id="@+id/tvRecentDelete"
            android:text="@string/moment_search_recent_delete"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvRecentTitle"
            android:layout_marginTop="15dp"
            android:id="@+id/rvRecent"
            tools:listitem="@layout/item_recent_search"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutRecentSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/layoutEmpty">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            android:text="@string/moment_search_empty"
            android:gravity="center"
            android:layout_marginHorizontal="85dp"
            android:id="@+id/tvSearchTitle"
            style="@style/T320Bold"
            android:textColor="@color/C171719"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="85dp"
            android:text="@string/moment_search_empty_content"
            app:layout_constraintTop_toBottomOf="@id/tvSearchTitle"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/C7F7F7F"
            style="@style/L414Medium"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/layoutResult"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layoutRecentSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:textColor="@color/C874FFF"
                android:text="@string/moment_search_count_title"
                style="@style/L216Medium"
                android:id="@+id/tvMomentCount"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tvMomentCount"
                app:layout_constraintBottom_toBottomOf="@id/tvMomentCount"
                app:layout_constraintStart_toEndOf="@id/tvMomentCount"
                style="@style/L216Medium"
                android:textColor="@color/C171719"
                android:text="@string/moment_search_title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMomentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvMomentCount"
                tools:listitem="@layout/item_moment_expired" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>