<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvProcess"
        style="@style/T222Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/process_ing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="2dp"
        android:background="@color/C171719"
        android:id="@+id/viewUnderLine"
        app:layout_constraintEnd_toEndOf="@id/tvProcess"
        app:layout_constraintStart_toStartOf="@id/tvProcess"
        app:layout_constraintTop_toBottomOf="@id/tvProcess" />

</androidx.constraintlayout.widget.ConstraintLayout>